<div class="card">
    <img src="/../images/profilebg.png" class="card-img-top profile-bg" alt="..." />
    <img src="/../images/cart.png" class="img-thumbnail profile-img" alt="..." />
    <div class="card-body">
        <h5 class="profile-name">Shoping Cart</h5>
        <hr />
        <table id="cartTable" class="table table-sm table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Product</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Cost</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <button id="cartButton" type="button" class="btn btn-info" data-toggle="modal"
            data-target="#exampleModalCenter">
            Make Payment
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Payment Gateway</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="paymentForm">
                            <div class="form-group">
                                <label for="acTo">Beneficiary</label>
                                <input type="text" class="form-control" id="acTo" value="112200"
                                    aria-describedby="emailHelp" placeholder="acTo" readonly>
                            </div>
                            <div class="form-group">
                                <label for="bank">Bank</label>
                                <input type="text" class="form-control" id="bank" placeholder="bank"
                                    value="CitiBank LTD" readonly>
                            </div>
                            <div class="form-group">
                                <label for="acFrom">Account Number</label>
                                <input type="text" class="form-control" id="acFrom" placeholder="acFrom" readonly>
                            </div>
                            <div class="form-group">
                                <label for="acPin">Account Pin</label>
                                <input type="password" class="form-control" id="acPin" placeholder="acPin">
                            </div>
                            <div class="form-group">
                                <label for="amt">Amount</label>
                                <input type="text" class="form-control" id="amt" placeholder="amount" readonly>
                            </div>
                            <button type="submit" class="btn btn-info">Submit</button>
                            <br>
                            <br>
                            <div id="progressDiv" class="progress">
                                <div id="progBar" class="progress-bar bg-success" role="progressbar" style="width: 0%;"
                                    aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <nav class="navbar navbar-light bg-light">
                            <a class="navbar-brand" href="#">
                                <img src="/images/bank.png" width="40" height="40"
                                    class="d-inline-block align-top" alt="">
                                CitiBank LTD
                            </a>
                        </nav>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>